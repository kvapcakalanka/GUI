<Window x:Class="TravelPlannerDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Travel Planner" Height="500" Width="800">
    <DockPanel LastChildFill="True">

        <!-- Navigation Bar -->
        <Border Background="LightGray" Height="50" DockPanel.Dock="Top">
            <Grid HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button Content="Home" Click="Home_Click" Width="100" Margin="5"/>
                    <Button Content="Trip Planner" Click="TripPlanner_Click" Width="120" Margin="5"/>
                    <Button Content="Bookings" Click="Bookings_Click" Width="100" Margin="5"/>
                    <Button Content="Logout" Click="Logout_Click" Width="80" Margin="5" Background="Red" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,50,0,0"/>
    </DockPanel>
</Window>
